@model UMS.Models.ViewModels.Account.AllAccountsViewModel

@{
    ViewBag.Title = "Всички потребители";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Потребители
            </div>
            <div class="panel-body">
                <div class="panel-group" id="accordion">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Управление на права</a>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse in" style="height: auto">
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>Потребителско име</th>
                                                <th>Име</th>
                                                <th>Фамилия</th>
                                                <th>Роли</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var user in Model.Users)
                                            {
                                                <tr>
                                                    <td>@user.UserName</td>
                                                    <td>@user.FirstName</td>
                                                    <td>@user.LastName</td>
                                                    <td><a class="btn btn-default" href="/account/roles/@user.Id"><i class="fa fa-user"></i> Промени</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>