@model UMS.Models.ViewModels.Menu.AddProfileMenu

@{
    ViewBag.Title = "Добавяне на нов достъп";
}
@if (TempData.ContainsKey("DuplicateRow"))
{
    <div class="alert alert-info">
        @TempData["DuplicateRow"]
    </div>
}

@if (TempData.ContainsKey("NotChoosenSystem"))
{
    <div class="alert alert-danger">
        @TempData["NotChoosenSystem"]
    </div>
}

@if (TempData.ContainsKey("NotChoosenRole"))
{
    <div class="alert alert-danger">
        @TempData["NotChoosenRole"]
    </div>
}

@using (Html.BeginForm("Add", "Menu", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-heading">
            Въвеждане на нов достъп
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group col-md-2">
                    @Html.LabelFor(x => Model.System, htmlAttributes: new { @class = "control-label col-md2" })
                    @Html.TextBoxFor(x => Model.System, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => Model.System, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(x => Model.Role, htmlAttributes: new { @class = "control-label col-md2" })
                    @Html.TextBoxFor(x => Model.Role, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => Model.Role, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-7">
                    @Html.LabelFor(x => Model.Description, htmlAttributes: new { @class = "control-label col-md2" })
                    @Html.TextBoxFor(x => Model.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => Model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div align="right">
                @Html.ActionLink("Изход", "Index", "Home", new { }, new { @class = "btn btn-danger" })
                <button type="submit" class="btn btn-primary">Запис</button>
            </div>
        </div>
    </div>

}