@model UMS.Models.ViewModels.Menu.AllProfileMenuViewModelPages

@{
    ViewBag.Title = "Списък от достъпи.";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-footer">
                @Html.ActionLink("Добавяне на нов достъп", "Add", "Menu", new { }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 ">
        <div class="panel panel-default">
            <div class="panel-heading">
                Списък на дефинирани услуги
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Име на услуга</th>
                                <th>Роля/Права/Достъп</th>
                                <th>Описание</th>
                                <th><div align="center">Промяна</div></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var menu in Model.AllProfileMenus)
                            {
                                <tr>
                                    <td>@menu.System</td>
                                    <td>@menu.Role</td>
                                    <td>@menu.Description</td>
                                    <td align="center">@Html.ActionLink("Редакция", "Edit", "Menu", new { @id = menu.Id }, new { @class = "btn btn-danger" })</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Model.TotalMenus >= Model.AllProfileMenus.Count())
{
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                @Html.ActionLink("<< Назад", "Index", "Menu", new { page = Model.PreviousPage }, new { })
            </li>
            <li class="page-item">
                <span aria-hidden="true">@Model.CurrentPage</span>               
            </li>
            <li class="page-item">
                @Html.ActionLink("Напред >>", "Index", "Menu", new { page = Model.NextPage }, new { })
            </li>
        </ul>
    </nav>
}
