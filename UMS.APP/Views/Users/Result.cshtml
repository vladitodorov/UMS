@model UMS.Models.ViewModels.AdUsers.AdUserByEgnViewModel

@{
    ViewBag.Title = "Result";
}

<div class="row">
    <div class="col-md-8 ">
        <!--   Kitchen Sink -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Резултат за ЕГН: @Model.Egn
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Акаунт АД</th>
                                <th>Име</th>
                                <th>Фамилия</th>
                                <th>Състояние</th>
                                <th>Инфо</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.SamAccount</td>
                                <td>@Model.FirstName</td>
                                <td>@Model.LastName</td>
                                <td>@(Model.IsAcive ? "Active" : "Deactivated")</td>
                                <td><a class="btn btn-default" href="/users/details/@Model.Egn"><i class="fa fa-edit "></i> Инфо</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

            
            
