<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Търсене на потребител</title>
    <!-- Bootstrap Styles-->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- FontAwesome Styles-->
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <!-- Custom Styles-->
    <link href="~/Content/custom-styles.css" rel="stylesheet" />
    <!-- Google Fonts-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    <link href="~/Scripts/Lightweight-Chart/cssCharts.css" rel="stylesheet" />
</head>

<body>
    <div id="wrapper">
        <nav class="navbar navbar-default top-navbar" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/home/index"><strong>Алианц България</strong></a>
            </div>

            <ul class="nav navbar-top-links navbar-right"></ul>
            @Html.Partial("_LoginPartial")

        </nav>
        <!--/. NAV TOP  -->

        @if (User.Identity.IsAuthenticated)
        {
            <nav class="navbar-default navbar-side" role="navigation">
                
                    <ul class="nav" id="main-menu">
                        <li>
                            <a href="/Home/Index"><i class="fa fa-search"></i> Начало</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-users"></i> Профили</a>
                        </li>
                        @if (User.IsInRole("Administrator"))
                        {
                            <li>
                                <a href="#"><i class="fa fa-sitemap"></i> Администрация<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li>@Html.ActionLink("Регистрация на потребител", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                                    <li>@Html.ActionLink("Управление права на потребители", "All", "Account")</li>
                                    <li>@Html.ActionLink("Управление на профили", "Profiles", "Users")</li>
                                    <li>@Html.ActionLink("Управление на достъпи", "Index", "Menu")</li>
                                </ul>
                            </li>
                        }
                    </ul>
                
            </nav>
            <!-- /. NAV SIDE  -->
        }

        <div id="page-wrapper">
            <div id="page-inner">
                @RenderBody()                
            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>


    @RenderSection("scripts", required: false)

    <!-- /. WRAPPER  -->
    <!-- JS Scripts-->
    <!-- jQuery Js -->
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <!-- Bootstrap Js -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Metis Menu Js -->
    <script src="~/Scripts/jquery.metisMenu.js"></script>

    <script src="~/Scripts/easypiechart-data.js"></script>
    <script src="~/Scripts/easypiechart.js"></script>

    <script src="~/Scripts/Lightweight-Chart/jquery.chart.js"></script>

    <!-- Custom Js -->
    <script src="~/Scripts/custom-scripts.js"></script>


    <script type="text/javascript">
        $(function () {
              $(document).tooltip();
          });
    </script>

</body>

</html>
