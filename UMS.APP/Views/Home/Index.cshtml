@model IEnumerable<UMS.Models.ViewModels.AdAccount.AdAccountViewModel>

@{
    ViewBag.Title = "Потребители от Активна директория";
}

<div><br /></div>
<div class="row">
    <div class="col-md-12">
        <table class="table-bordered table-hover table-responsive">
            <tr>
                <th>AD Account</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Hermes ID</th>
                <th>Active</th>
                <th>Settings</th>
            </tr>
            
            @foreach (var account in Model)
            {
            <tr>
                <td>@account.SamAccount</td>
                <td>@account.FirstName</td>
                <td>@account.LastName</td>
                <td>@account.HermesId</td>
                <td>@account.IsAcive</td>
                <td><li class="btn btn-primary"><a style="color: white" href="/user/details/@account.Id">User details</a></li></td>
            </tr>
            }

        </table>
    </div>
</div>